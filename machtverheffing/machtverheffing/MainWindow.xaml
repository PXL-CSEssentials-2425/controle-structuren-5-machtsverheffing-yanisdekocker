<Window x:Class="machtverheffing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:machtverheffing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Getal" HorizontalAlignment="Left" Height="28" Margin="34,67,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox x:Name="numberTextBox" HorizontalAlignment="Left" Height="31" Margin="34,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Height="233" Margin="34,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="616"/>
        <Button x:Name="calculateButton" Content="Berekenen" HorizontalAlignment="Left" Height="39" Margin="670,178,0,0" VerticalAlignment="Top" Width="120" Click="calculateButton_Click"/>
        <Button x:Name="clearButton" Content="Wissen" HorizontalAlignment="Left" Height="38" Margin="670,256,0,0" VerticalAlignment="Top" Width="120" Click="clearButton_Click"/>
        <Button x:Name="closeButton" Content="Afsluiten" HorizontalAlignment="Left" Height="36" Margin="670,338,0,0" VerticalAlignment="Top" Width="120" Click="closeButton_Click"/>

    </Grid>
</Window>
